<div class="shipper-detail">
    <div class="shipper-detail__info">
        <div class="shipper-detail__info-content">
            <div class="shipper-detail__info-title">Thông tin tài xế</div>
            <hr class="divider" />
            <div class="shipper-detail__info-detail">
                <table class="shipper-detail__info-detail-table">
                    <colgroup>
                      <col span="1" style="width: 20%; margin: 0 5px" />
                      <col span="1" style="width: 80%; margin: 0 5px" />
                    </colgroup>
                    <tr>
                        <td>Tên tài xế</td>
                        <td>{{user.shipperName}}</td>
                    </tr>
                    <tr>
                        <td>Địa chỉ của tài xế</td>
                        <td>{{user.shipperAddress}}</td>
                    </tr>
                    <tr>
                        <td>Biển số xe</td>
                        <td>{{user.shipperLicensePlates}}</td>
                    </tr>
                    <tr>
                        <td>Loại xe</td>
                        <td>{{user.shipperTypeMotor}}</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại</td>
                        <td>{{user.phone}}</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo tài khoản</td>
                        <td>{{user.shipperDate}}</td>
                    </tr>
                    <tr>
                        <td>Tổng đơn đã nhận</td>
                        <td>{{user.totalOrderReceived}}</td>
                    </tr>
                    <tr>
                        <td>Tổng đơn đã giao</td>
                        <td>{{user.totalOrderDelivered}}</td>
                    </tr>
                    <tr>
                        <td>Tổng doanh thu</td>
                        <td>{{discount user.totalRevenue 0}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="shipper-detail__control">
        <a href="/shipper/info/edit">
            <button class="primary-button shipper-detail__control-btn">Chỉnh sửa thông tin</button>
        </a>
    </div>
</div>